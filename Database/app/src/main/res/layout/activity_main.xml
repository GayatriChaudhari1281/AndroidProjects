<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="71dp"
        android:layout_marginTop="200dp"
        android:onClick="InsertButton"
        android:text="Add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Find"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="FindButton"
        android:text="FIND"
        app:layout_constraintBaseline_toBaselineOf="@+id/Add"
        app:layout_constraintEnd_toEndOf="@+id/Delete"
        app:layout_constraintStart_toStartOf="@+id/Delete" />

    <Button
        android:id="@+id/Update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="71dp"
        android:layout_marginTop="73dp"
        android:onClick="UpdateButton"
        android:text="UPDATE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Add" />

    <Button
        android:id="@+id/Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="58dp"
        android:onClick="DeleteButton"
        android:text="DELETE"
        app:layout_constraintBaseline_toBaselineOf="@+id/Update"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/List"
        android:layout_width="303dp"
        android:layout_height="48dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="37dp"
        android:onClick="ListButton"
        android:text="Student List Here"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>